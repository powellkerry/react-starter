{
  "name": "react-starter",
  "version": "0.0.1",
  "description": "React Starter Kit",
  "main": "index.js",
  "scripts": {
    "serve": "npm run build",
    "dev": "npm run watch && npm run sync && node bin/www ",
    "build": "webpack --config webpack.config.js  && node bin/www",
    "watch": "npm-watch",
    "sync": "browser-sync start --proxy 'localhost:4000' --files './dist/**/*'"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx,css",
      "quiet": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Roilan/react-server-boilerplate"
  },
  "keywords": [
    "react",
    "react server",
    "reactjs"
  ],
  "author": "Kerry Powell <powellkerry@ldschurch.org>",
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "json-loader": "^0.5.4",
    "node-sass": "^3.8.0",
    "sass-loader": "^4.0.0",
    "webpack": "^2.0.0",
    "webpack-node-externals": "^1.2.0"
  },
  "dependencies": {
    "async": "^2.2.0",
    "autoprefixer": "^6.7.7",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.0",
    "body-parser": "^1.17.1",
    "browser-sync": "^2.18.8",
    "compression": "^1.6.2",
    "css-loader": "^0.27.3",
    "express": "^4.14.0",
    "helmet": "^3.5.0",
    "import-directory": "^1.0.6",
    "memoizee": "^0.4.4",
    "merge": "^1.2.0",
    "npm-watch": "^0.1.8",
    "postcss-cssnext": "^2.10.0",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "react": "^15.2.0",
    "react-dom": "^15.2.0",
    "request": "^2.81.0",
    "webpack-combine-loaders": "^2.0.3"
  }
}
